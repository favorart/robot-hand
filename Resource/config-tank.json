{
  "robo": {
    "name": "Tank-v1",
    "base": [ 0.10, 0.10 ],
    "joints": [
      {
        "name": "LTrack",
        "type": 0,
        "base": [ 0.15, 0.10 ],
        "nMoveFrames": 160,
        "maxMoveFrame": 0.1,   "#maxMoveFrame": "max distance you can replace in one time",
        "motionLaw": {
          "name": "STAB",
          "type": 3,
          "stopD": 0.07,
          "param": "0.25"
        },
        "show": true
      },
      {
        "name": "RTrack",
        "type": 1,
        "base": [ 0.05, 0.10 ],
        "nMoveFrames": 160,
        "maxMoveFrame": 0.1,
        "motionLaw": {
          "name": "STAB",
          "type": 3,
          "stopD": 0.07,
          "param": "0.25"
        },
        "show": true
      }
    ]
  },
  "env": {
    "skip_show_steps": 15,
    "animation": true
  },
  "target": {
    "type": "Rect",

    "hn_aims": 18,
    "vn_aims": 18,
    "#hn_aims": 200,
    "#vn_aims": 200,

    "left": -0.41,
    "right": 0.43,
    "top": -0.03,
    "bottom": -0.85
  },
  "algo": {
    "tour": {
      "type": "new",
      "#type": "old",

      "lasts_step_increment_thick": 20,
      "lasts_step_initiate": 25,
      "lasts_step_braking": 5,
      "pd_shift": [ 0.15, -0.05 ],

      "#STAGEs": {
        "b_distance": false,
        "b_target": false,
        "b_braking": false,
        "b_checking": false,
        "step_distance": 0.07,
        "lasts_step_increment": 5
      }
    },
    "stage3": {
      "tries": 32,
      "tries_break": 100,
      "random_try": 3,

      "side": 0.1,                 "#side"               : "половина ребра квадрата, из которого берутся все точки",
      "side_decrease_step": 0.01,  "#side_decrease_step" : "шаг уменьшения области поиска для взвешанной суммы",
      "use_weighted_mean": true,   "#use_weighted_mean"  : "используется взвешенная арифметическое среднее (иначе обычное)"
    },
    "stage2": {
      "draft_distance"   : 0.005,  "#detail!_distance" : "Желаемое расстояние между конеными точками чернового покрытия",
      "lasts_init_value" : 1,      "#lasts_init_value" : "Время преодоления инерции",
      "lasts_incr_value" : 3,      "#lasts_incr_value" : "Изменение шага времени"
    },
    "stage1": {
      "draft_distance"   : 0.07,   "#draft_distance"   : "Желаемое расстояние между конеными точками чернового покрытия",
      "lasts_init_value" : 50,     "#lasts_init_value" : "Время преодоления инерции",
      "lasts_incr_value" : 10,     "#lasts_incr_value" : "Изменение шага времени"
    },
  "precision": 1.5,                "#precision" : "mm"
  }
}
